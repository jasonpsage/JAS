// Simple Unzip Utility
program junzip;
//=============================================================================

//=============================================================================
// Global Directives
//=============================================================================
{$INCLUDE i_jegas_splash.pp}
//=============================================================================


//=============================================================================
uses
//=============================================================================
  paszlib,
  zipper,
  sysutils;
//=============================================================================

//=============================================================================
var
//=============================================================================
  UnZipper: TUnZipper;
  bOk: boolean;
//=============================================================================

//=============================================================================
begin
//=============================================================================
  UnZipper := TUnZipper.Create;
  bOk:=paramcount=2;
  if not bOk then
  begin
    writeln('junzip [zipfile2unzip] [dest]');
  end;
  if bOk then
  begin
    UnZipper.FileName := paramstr(1);
    UnZipper.OutputPath := paramstr(2);
    UnZipper.Examine;
    UnZipper.UnZipAllFiles;
  end;
  UnZipper.Free;

//=============================================================================
end.
