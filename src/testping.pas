// Program to test Synapse PING
program testping;
//=============================================================================

//=============================================================================
// GLOBAL DIRECTIVES
//=============================================================================
{$INCLUDE i_jegas_macros.pp}
{$MODE DELPHI}
//=============================================================================

//=============================================================================
uses
//=============================================================================
 pingsend,
 sysutils;
//=============================================================================

//=============================================================================
var
//=============================================================================
  ping:TPingSend;
//=============================================================================

//=============================================================================
begin
//=============================================================================
  ping:=TPingSend.Create;
  try
    ping.ping(ParamStr(1));
    Writeln (IntTostr(ping.pingtime));  
  finally
    ping.Free;
  end;
end.
