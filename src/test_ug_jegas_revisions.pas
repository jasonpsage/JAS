// Test Jegas' Revisions Routine in the jegas unit
program test_ug_jegas_revisions;
//=============================================================================

//=============================================================================
// Global Directives
//=============================================================================
{$INCLUDE i_jegas_splash.pp}
{$SMARTLINK ON}
{$PACKRECORDS 4}
{$MODE objfpc}
//=============================================================================

//=============================================================================
Uses
//=============================================================================
  ug_jegas;
//=============================================================================


//=============================================================================
Var
//=============================================================================
  sa: AnsiString;
//=============================================================================

//=============================================================================
Label
//=============================================================================
  myloop;
//=============================================================================

//=============================================================================
Begin
//=============================================================================
myloop:
  Writeln;
  Write('Enter Revision to advance:'); readln(sa);
  Writeln;
  Writeln('Advanced Revision:', saNextRevisionKey(sa));
  Goto myloop;
//=============================================================================
End.
