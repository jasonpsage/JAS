// simple zip utility
program jzip;
//=============================================================================

//=============================================================================
// Global Directives
//=============================================================================
{$INCLUDE i_jegas_splash.pp}
{$INCLUDE i_jegas_macros.pp}
{$SMARTLINK ON}
{$MODE objfpc}
{$PACKRECORDS 4}
//=============================================================================


//=============================================================================
uses
//=============================================================================
  Zipper;
//=============================================================================

//=============================================================================
var
//=============================================================================
  Zip: TZipper;
  I: longint;
  bOk: boolean;
//=============================================================================

//=============================================================================
begin
  Zip := TZipper.Create;

  bOk:=paramcount>=2;
  if not bOk then
  begin
    writeln('jzip [zipfilename] [file(s)2zip]');
  end;

  if bOk then
  begin
    Zip.FileName := ParamStr(1);
    for I := 2 to ParamCount do
      Zip.Entries.AddFileEntry(ParamStr(I), ParamStr(I));
    Zip.ZipAllFiles;
  end;
  Zip.Free;Zip:=nil;
end.
