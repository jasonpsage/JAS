// GUI Related - Top,Left,Bottom,Right Class - for dealing with rectangles and
// mouse regions for example.
Unit ug_tlbr;
//=============================================================================

//=============================================================================
// Global Directives
//=============================================================================
{$INCLUDE i_jegas_macros.pp}
{$DEFINE SOURCEFILE:='ug_tlbr.pp'}
{$SMARTLINK ON}
{$PACKRECORDS 4}
{$MODE objfpc}

{$IFDEF DEBUGLOGBEGINEND}
{$INFO | DEBUGLOGBEGINEND: TRUE}
{$ENDIF}
//=============================================================================



//*****************************************************************************
//=============================================================================
//*****************************************************************************
//
                               Interface
//
//*****************************************************************************
//=============================================================================
//*****************************************************************************



//=============================================================================
{ }
Type TTLBR = Class
//=============================================================================
  { }
  Public
    Top: longint;
    Left: longint;
    Bottom: longint;
    Right: longint;
  Constructor create;
  Destructor destroy; override;

  function Height_Get: longint;
  procedure Height_Set(p_Height: longint);
  function Width_Get: longint;
  Procedure Width_Set(p_Width: longint);
  function Inside(p_X: longint; p_Y: longint): boolean;
End;
//=============================================================================

//============================================================================
//============================================================================
//============================================================================
                             Implementation
//============================================================================
//============================================================================
//============================================================================




//============================================================================
// Begin                         TTLBR
//============================================================================

//----------------------------------------------------------------------------
constructor TTLBR.Create;
//----------------------------------------------------------------------------
begin
  Top:=0;
  Left:=0;
  Bottom:=0;
  Right:=0;
end;
//----------------------------------------------------------------------------

//----------------------------------------------------------------------------
destructor TTLBR.Destroy;
//----------------------------------------------------------------------------
begin
end;
//----------------------------------------------------------------------------


//----------------------------------------------------------------------------
function TTLBR.Height_Get: longint;
//----------------------------------------------------------------------------
begin
  result:=Bottom-Top;
end;
//----------------------------------------------------------------------------

//----------------------------------------------------------------------------
procedure TTLBR.Height_Set(p_Height: longint);
//----------------------------------------------------------------------------
begin
  Bottom := Top+p_Height;
end;
//----------------------------------------------------------------------------

//----------------------------------------------------------------------------
function TTLBR.Width_Get: longint;
//----------------------------------------------------------------------------
begin
  result:=Right-Left;
end;
//----------------------------------------------------------------------------

//----------------------------------------------------------------------------
Procedure TTLBR.Width_Set(p_Width: longint);
//----------------------------------------------------------------------------
begin
  Right := Left+p_Width;
end;
//----------------------------------------------------------------------------

//----------------------------------------------------------------------------
function TTLBR.Inside(p_X: longint; p_Y: longint): boolean;
//----------------------------------------------------------------------------
begin
  Result:= (p_X>=Left) and (p_X<=Right) and (p_Y>=Top) and (p_Y<=Bottom);
end;
//----------------------------------------------------------------------------

//============================================================================
// End                           TTLBR
//============================================================================


//============================================================================
begin
end.
